<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="220dp"
    android:layout_marginEnd="10dp"
    app:cardBackgroundColor="@color/card_background_dark"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/shorts_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/black" />

        <!-- Gradient overlay taaki text dikhe -->
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_gradient_black" />

        <TextView
            android:id="@+id/shorts_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="8dp"
            android:text="Shorts Video Title..."
            android:textColor="@color/white"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>