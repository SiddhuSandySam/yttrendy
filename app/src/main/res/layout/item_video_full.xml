<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="8dp"
    app:cardBackgroundColor="@color/card_background_dark"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bada Thumbnail -->
        <ImageView
            android:id="@+id/thumbnail_image_view"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Title -->
            <TextView
                android:id="@+id/video_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video Title Here"
                android:textColor="@color/text_primary_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"/>

            <!-- Details -->
            <TextView
                android:id="@+id/video_details_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Channel Name • 1.2M views • 2 days ago"
                android:textColor="@color/text_secondary_dark"
                android:textSize="12sp"/>
            <!-- Details TextView ke niche ye row add karo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/btn_save_card"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_save"
                    app:tint="@color/text_secondary_dark"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <ImageView
                    android:id="@+id/btn_share_card"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="8dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_share"
                    app:tint="@color/text_secondary_dark"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>