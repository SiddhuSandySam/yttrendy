<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/card_background_dark"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">
    <!-- Width 160dp fix kiya hai horizontal scrolling ke liye -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Thumbnail (16:9 ratio approx) -->
        <ImageView
            android:id="@+id/thumbnail_image_view"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top">

                <TextView
                    android:id="@+id/video_title_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="13sp"
                    android:maxLines="2"
                    android:text="Video Title here"
                    android:ellipsize="end"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/btn_share_card"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_share"
                    app:tint="@color/text_secondary_dark" />
            </LinearLayout>

            <!-- Views / Channel -->
            <TextView
                android:id="@+id/video_details_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Channel â€¢ 1M views"
                android:textColor="@color/text_secondary_dark"
                android:textSize="10sp"
                android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>