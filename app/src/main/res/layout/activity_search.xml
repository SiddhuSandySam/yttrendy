<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/background_dark">

    <!-- 1. SEARCH TOOLBAR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@color/cardview_dark_background"
        android:elevation="4dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/text_secondary_dark" />

        <!-- Search Input -->
        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Search topics, channels..."
            android:textColor="@color/white"
            android:textColorHint="@color/text_secondary_dark"
            android:layout_marginStart="16dp"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"/>

        <!-- Search Action Button -->
        <ImageView
            android:id="@+id/btn_perform_search"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_search"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/accent_blue" />

    </LinearLayout>

    <!-- 2. FILTER BAR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#1A1A1A">

        <TextView
            android:id="@+id/btn_search_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter Results â–¾"
            android:textColor="@color/accent_blue"
            android:padding="8dp"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:drawableTint="@color/accent_blue"/>
    </LinearLayout>

    <!-- 3. CONTENT AREA (Results & History Overlay) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- A. Search Results List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:clipToPadding="false"/>

        <!-- B. Loading Spinner -->
        <ProgressBar
            android:id="@+id/search_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <!-- C. HISTORY LIST (Overlay on top) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_dark"
            android:visibility="gone"
            android:elevation="10dp"
            android:padding="8dp"/>

    </RelativeLayout>
</LinearLayout>